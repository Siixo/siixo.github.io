            const position = index - currentIndex;
            slide.setAttribute('data-position', position);
            
            // Limiter la position pour l'affichage
            if (position < -2) {
                slide.setAttribute('data-position', '-3');
            } else if (position > 2) {
                slide.setAttribute('data-position', '3');
            }
        });

        // Update dots (bas√© sur les slides originales)
        const realIndex = getRealIndex();
        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === realIndex);
            if (index === realIndex) {
                dot.classList.remove('bg-gray-300');
                dot.classList.add('bg-pink');
            } else {
                dot.classList.remove('bg-pink');
                dot.classList.add('bg-gray-300');
            }
        });
    }

    function getRealIndex() {
        // Convertir l'index actuel en index des slides originales
        let realIndex = (currentIndex - 2) % totalOriginalSlides;
        if (realIndex < 0) realIndex += totalOriginalSlides;
        return realIndex;
    }

    function goToSlide(targetRealIndex) {
        // Trouver le bon index dans toutes les slides
        currentIndex = targetRealIndex + 2;
        updateCoverflow();
    }

    function nextSlide() {
        if (isTransitioning) return;
        
        isTransitioning = true;
        currentIndex++;
        updateCoverflow();

        // Si on est sur un clone √† la fin, revenir au d√©but
        setTimeout(() => {
            if (currentIndex >= allSlides.length - 2) {
                // D√©sactiver les transitions temporairement
                allSlides.forEach(slide => {
                    slide.style.transition = 'none';
                });
                
                currentIndex = 2; // Retour au d√©but (premi√®re vraie slide)
                updateCoverflow();
                
                // R√©activer les transitions
                setTimeout(() => {
                    allSlides.forEach(slide => {
                        slide.style.transition = 'all 0.5s ease-out';
                    });
                    isTransitioning = false;
                }, 50);
            } else {
                isTransitioning = false;
            }
        }, 500);
    }

    function prevSlide() {
        if (isTransitioning) return;
        
        isTransitioning = true;
        currentIndex--;
        updateCoverflow();

        // Si on est sur un clone au d√©but, aller √† la fin
        setTimeout(() => {
            if (currentIndex < 2) {
                // D√©sactiver les transitions temporairement
                allSlides.forEach(slide => {
                    slide.style.transition = 'none';
                });
                
                currentIndex = allSlides.length - 3; // Aller √† la fin (derni√®re vraie slide)
                updateCoverflow();
                
                // R√©activer les transitions
                setTimeout(() => {
                    allSlides.forEach(slide => {
                        slide.style.transition = 'all 0.5s ease-out';
                    });
                    isTransitioning = false;
                }, 50);
            } else {
                isTransitioning = false;
            }
        }, 500);
    }

    // Event listeners
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    // Dots navigation
    dots.forEach((dot, index) => {
        dot.addEventListener('click', () => goToSlide(index));
    });

    // Click on slides (uniquement les vraies slides, pas les clones)
    function setupSlideClicks() {
        allSlides.forEach((slide, index) => {
            if (!slide.classList.contains('clone')) {
                slide.addEventListener('click', () => {
                    if (index !== currentIndex && !isTransitioning) {
                        currentIndex = index;
                        updateCoverflow();
                    }
                });
            }
        });
    }

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') prevSlide();
        if (e.key === 'ArrowRight') nextSlide();
    });

    // Auto-play avec boucle infinie
    let autoPlay = setInterval(nextSlide, 4000);

    // Pause on hover
    container.addEventListener('mouseenter', () => clearInterval(autoPlay));
    container.addEventListener('mouseleave', () => {
        autoPlay = setInterval(nextSlide, 4000);
    });

    // Touch/swipe support pour mobile
    let startX = 0;
    let endX = 0;

    container.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
    });

    container.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        const difference = startX - endX;
        
        if (Math.abs(difference) > 50) { // Minimum swipe distance
            if (difference > 0) {
                nextSlide();
            } else {
                prevSlide();
            }
        }
    });

    // Initialize
    createInfiniteLoop();
    setupSlideClicks();
    updateCoverflow();
});
</script>





