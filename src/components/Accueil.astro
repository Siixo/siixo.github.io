  <script type="module">
    const carousel = document.getElementById("carousel");
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");

    let current = 0;

    function updateArrows() {
  // Si on est sur le premier slide (current === 0), on masque la fl√®che "pr√©c√©dent"
  if (current === 0) {
    prevBtn.classList.add('hidden')
  } else {
    prevBtn.classList.remove('hidden')
  }

  // De m√™me pour la fl√®che "suivant" sur le dernier slide
  if (current === 1) {
    nextBtn.classList.add('hidden')
  } else {
    nextBtn.classList.remove('hidden')
  }
}
    

    function updateSlide() {
      carousel.style.transform = `translateX(-${current * 100}vw)`;
      updateArrows();
    }

    nextBtn.addEventListener("click", () => {
      if (current < 1) {
        current++;
        updateSlide();
      }
    });

    prevBtn.addEventListener("click", () => {
      if (current > 0) {
        current--;
        updateSlide();
      }
    });

    // Swipe mobile
    let startX = 0;
    let endX = 0;

    carousel.addEventListener("touchstart", (e) => {
      startX = e.touches[0].clientX;
    });

    carousel.addEventListener("touchend", (e) => {
      endX = e.changedTouches[0].clientX;
      const delta = endX - startX;

      if (delta < -50 && current < 1) {
        current++;
        updateSlide();
      } else if (delta > 50 && current > 0) {
        current--;
        updateSlide();
      }
    });
    updateArrows();
  </script>
