    transform: translateX(280px) rotateY(-45deg) scale(0.8);
    z-index: 1;
    opacity: 0.6;
}

/* Masquer les slides trop √©loign√©es */
.coverflow-slide[data-position="3"],
.coverflow-slide[data-position="-3"],
.coverflow-slide[data-position="4"],
.coverflow-slide[data-position="-4"] {
    opacity: 0;
    transform: translateX(400px) rotateY(-60deg) scale(0.7);
    z-index: 0;
}

/* Effet hover sur les slides */
.coverflow-slide:hover .slide-content {
    transform: translateY(-10px);
    box-shadow: 0 25px 50px rgba(196, 62, 69, 0.3);
}

.coverflow-slide .slide-content {
    transition: all 0.3s ease;
}

/* Animation pour mobile */
@media (max-width: 768px) {
    .coverflow-slide[data-position="-2"],
    .coverflow-slide[data-position="2"] {
        opacity: 0;
    }
    
    .coverflow-slide[data-position="-1"] {
        transform: translateX(-100px) rotateY(15deg) scale(0.85);
    }
    
    .coverflow-slide[data-position="1"] {
        transform: translateX(100px) rotateY(-15deg) scale(0.85);
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('.coverflow-container');
    const wrapper = container.querySelector('.coverflow-wrapper');
    const originalSlides = container.querySelectorAll('.coverflow-slide');
    const dots = container.querySelectorAll('.dot');
    const prevBtn = container.querySelector('.coverflow-prev');
    const nextBtn = container.querySelector('.coverflow-next');
    
    const totalOriginalSlides = originalSlides.length;
    let currentIndex = 0;
    let allSlides = [];
    let isTransitioning = false;

    // Cr√©er la boucle infinie en dupliquant les slides
    function createInfiniteLoop() {
        // Cloner les 2 derni√®res slides au d√©but
        for (let i = totalOriginalSlides - 2; i < totalOriginalSlides; i++) {
            const clone = originalSlides[i].cloneNode(true);
            clone.classList.add('clone');
            wrapper.insertBefore(clone, originalSlides[0]);
        }

        // Cloner les 2 premi√®res slides √† la fin
        for (let i = 0; i < 2; i++) {
            const clone = originalSlides[i].cloneNode(true);
            clone.classList.add('clone');
            wrapper.appendChild(clone);
        }

        // Mettre √† jour la liste de toutes les slides
        allSlides = wrapper.querySelectorAll('.coverflow-slide');
        
        // Commencer √† l'index 2 (premi√®re vraie slide apr√®s les clones)
        currentIndex = 2;
    }

    function updateCoverflow() {
        allSlides.forEach((slide, index) => {
            const position = index - currentIndex;
            slide.setAttribute('data-position', position);
            
            // Limiter la position pour l'affichage
            if (position < -2) {
                slide.setAttribute('data-position', '-3');
            } else if (position > 2) {
                slide.setAttribute('data-position', '3');
            }
        });

        // Update dots (bas√© sur les slides originales)
        const realIndex = getRealIndex();
        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === realIndex);
            if (index === realIndex) {
                dot.classList.remove('bg-gray-300');
                dot.classList.add('bg-pink');
            } else {
                dot.classList.remove('bg-pink');
                dot.classList.add('bg-gray-300');
            }
        });
    }

    function getRealIndex() {
        // Convertir l'index actuel en index des slides originales
        let realIndex = (currentIndex - 2) % totalOriginalSlides;
        if (realIndex < 0) realIndex += totalOriginalSlides;
        return realIndex;
    }

    function goToSlide(targetRealIndex) {
        // Trouver le bon index dans toutes les slides
        currentIndex = targetRealIndex + 2;
        updateCoverflow();
    }

    function nextSlide() {
        if (isTransitioning) return;
        
        isTransitioning = true;
        currentIndex++;
        updateCoverflow();

        // Si on est sur un clone √† la fin, revenir au d√©but
        setTimeout(() => {
            if (currentIndex >= allSlides.length - 2) {
                // D√©sactiver les transitions temporairement
                allSlides.forEach(slide => {
                    slide.style.transition = 'none';
                });
                
                currentIndex = 2; // Retour au d√©but (premi√®re vraie slide)
                updateCoverflow();
                
                // R√©activer les transitions
                setTimeout(() => {
                    allSlides.forEach(slide => {
                        slide.style.transition = 'all 0.5s ease-out';
                    });
                    isTransitioning = false;
                }, 50);
            } else {
                isTransitioning = false;
            }
        }, 500);
    }

    function prevSlide() {
        if (isTransitioning) return;
        
        isTransitioning = true;
        currentIndex--;
        updateCoverflow();

        // Si on est sur un clone au d√©but, aller √† la fin
        setTimeout(() => {
            if (currentIndex < 2) {
                // D√©sactiver les transitions temporairement
                allSlides.forEach(slide => {
                    slide.style.transition = 'none';
                });
                
                currentIndex = allSlides.length - 3; // Aller √† la fin (derni√®re vraie slide)
                updateCoverflow();
                
                // R√©activer les transitions
                setTimeout(() => {
                    allSlides.forEach(slide => {
                        slide.style.transition = 'all 0.5s ease-out';
                    });
                    isTransitioning = false;
                }, 50);
            } else {
                isTransitioning = false;
            }
        }, 500);
    }

    // Event listeners
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    // Dots navigation
    dots.forEach((dot, index) => {
        dot.addEventListener('click', () => goToSlide(index));
    });

    // Click on slides (uniquement les vraies slides, pas les clones)
    function setupSlideClicks() {
        allSlides.forEach((slide, index) => {
            if (!slide.classList.contains('clone')) {
                slide.addEventListener('click', () => {
                    if (index !== currentIndex && !isTransitioning) {
                        currentIndex = index;
                        updateCoverflow();
                    }
                });
            }
        });
    }

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') prevSlide();
        if (e.key === 'ArrowRight') nextSlide();
    });

    // Auto-play avec boucle infinie
    let autoPlay = setInterval(nextSlide, 4000);

    // Pause on hover
    container.addEventListener('mouseenter', () => clearInterval(autoPlay));
    container.addEventListener('mouseleave', () => {
        autoPlay = setInterval(nextSlide, 4000);
    });

    // Touch/swipe support pour mobile
    let startX = 0;
    let endX = 0;

    container.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
    });

    container.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        const difference = startX - endX;
        
        if (Math.abs(difference) > 50) { // Minimum swipe distance
            if (difference > 0) {
                nextSlide();
            } else {
                prevSlide();
            }
        }
    });

    // Initialize
    createInfiniteLoop();
    setupSlideClicks();
    updateCoverflow();
});
</script>





