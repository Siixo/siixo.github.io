    transform: translateX(-280px) rotateY(45deg) scale(0.8);
    z-index: 1;
    opacity: 0.6;
}

.coverflow-slide[data-position="-1"] {
    transform: translateX(-140px) rotateY(25deg) scale(0.9);
    z-index: 2;
    opacity: 0.8;
}

.coverflow-slide[data-position="0"] {
    transform: translateX(0) rotateY(0deg) scale(1);
    z-index: 3;
    opacity: 1;
}

